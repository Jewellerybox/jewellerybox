<ul>
  <% if ::Refinery::Catalogs::Admin::CatalogsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.catalogs_admin_catalogs_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_catalogs_admin_catalog_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Catalogs::Admin::CatalogsController.sortable? && ::Refinery::Catalogs::Catalog.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Catalogs"),
                 refinery.catalogs_admin_catalogs_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Catalogs"),
                 refinery.catalogs_admin_catalogs_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
